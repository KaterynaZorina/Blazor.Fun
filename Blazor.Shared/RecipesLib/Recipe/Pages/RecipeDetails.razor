<div class="row mb-3">
    <div class="col-6 themed-grid-col">
        <label>
            Recipe title
        </label>
    </div>
    <div class="col-6 themed-grid-col">
        <p>@Recipe.Title</p>
    </div>
</div>

<div class="row mb-3">
    <div class="col-6 themed-grid-col">
        <label>Recipe description</label>
    </div>
    <div class="col-6 themed-grid-col">
        <p>@Recipe.Description</p>
    </div>
</div>


<label>Ingredients:</label>
<div class="row mb-3" style="background-color: @BackgroundColor">
    <div class="col-6 themed-grid-col">
        <label>
            Title
        </label>
    </div>
    <div class="col-6 themed-grid-col">
        <label>
            Amount
        </label>
    </div>
</div>
@foreach (var ingredient in Recipe.Ingredients)
{
    <IngredientDetails Ingredient="@ingredient"></IngredientDetails>
}

<div>
    <AddIngredient OnIngredientAdd="AddNewIngredient"></AddIngredient>
</div>

@code{
    [CascadingParameter(Name="BackgroundColor")]
    protected string BackgroundColor { get; set; }
    
    [Parameter]
    public Recipe Recipe { get; set; }

    private void AddNewIngredient(Ingredient ingredient)
    {
        Recipe.Ingredients.Add(ingredient);
    }

}